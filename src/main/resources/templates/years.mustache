<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Objetivos</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Jersey+10&family=Michroma&display=swap" rel="stylesheet">
    
    
    <link rel= "stylesheet" href="/css/helloPageStyles.css">
</head>





<body class = "body">
<div class = "outside">
    <div class="centeredDiv">
        
        <div>
            <p class = "yellowLetters">Años de {{username}}</p>
        </div>
            <div class="horizontal">
                {{#years}}
                <div class="margin">
                <form action="/years" method="POST">
                    <input type="hidden" name="number" value={{number}}>
                    <input type="hidden" name="{{_csrf.parameterName}}" value="{{_csrf.token}}"/>
                    <button type="submit" id="year"> {{number}} </button>
                </form>
                </div>
                {{/years}}
                <div class="margin">
                <button type="button" id="newYear"> nuevo año </button>
                </div>


                

                <div class="margin">
                <button type="button" id="retroceder"> retroceder </button>
                </div>

                
            </div>
    </div>
</div>
    



    <!-- JavaScript de Bootstrap desde CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    
    <!-- El script debe ir al final del body para asegurar que el DOM esté listo -->
    <script>
    const btnBack = document.getElementById('retroceder');
    const btnNew = document.getElementById('newYear');

    if (btnBack) {
            btnBack.addEventListener('click',function() {
            
            window.location.href = '/home';
            });
        }
    if (btnNew) {
            btnNew.addEventListener('click',function() {
            
            window.location.href = '/newYear';
            });
        }

    


    </script>

</body>
</html>
