<body class = "body" style=" width : fit-content; height : fit-content;">
<div class = "outside">
    <div class="centeredDiv">
        
        <div>
            <p class = "yellowLetters">{{user.username}}</p>
        </div>


        



            <div class="horizontal">
                
              <canvas style="display: block; box-sizing: border-box; height: 400px; width: 1000px;" width="1000" height="400" id="myChart">
              
              </canvas>
                




            </div>


            <div>

{{#user.years}}
    <div class="anio-container" style="display:flex; flex-direction: column; width: 1050px;">
      <button class="anio-btn" onclick="toggleMeses('{{number}}')">Año {{number}}</button>
      <div id="meses-{{number}}" class="meses" style="justify-content:space-between;">
        {{#months}}
          <button class="mes-btn" style="font-size:12px;" onclick='actualizarGrafica("{{Id}}","{{name}}")'>{{name}}</button>
        {{/months}}

        
      </div>
      
    </div>
  {{/user.years}}
<div class="margin">
                <div>
                <button type="button" id="retroceder"> retroceder </button>
                </div>
        </div>
            </div>


    </div>
</div>

    



   <script>



 
 
function toggleMeses(anio) {
    const contenedor = document.getElementById(`meses-${anio}`);
    contenedor.classList.toggle('visible');
  
  }


const datasetsPorMes = {

 {{#user.years}} {{#months}}
 
  data{{Id}} : [ {{#days}}{{totalSells}}, {{/days}} 0],
  {{/months}} {{/user.years}}
};
  


const ctx = document.getElementById('myChart').getContext('2d');
  const miGrafico = new Chart(ctx, {
    type: 'line',
    data: {
      labels: [],
      datasets: []
    },
    options: {
      responsive: false,
      plugins: {
        title: {
          display: true,
          text: 'Datos por Mes'
        }
      }
    }
  });

  // Almacena los IDs ya añadidos
const mesesMostrados = new Set();

function actualizarGrafica(monthId,name) {
  const key = `data${monthId}`;
  const datos = datasetsPorMes[key];
  if (!datos) return; // Si no hay datos, no hace nada

  const graph = datos.slice(0, -1); // Elimina el último 0

  if (mesesMostrados.has(monthId)) {
    // Si ya está, lo quitamos
    miGrafico.data.datasets = miGrafico.data.datasets.filter(ds => ds.label !== `${name}`);
    mesesMostrados.delete(monthId);
  } else {
    // Si no está, lo añadimos
    miGrafico.data.datasets.push({
      label: `${name}`,
      data: graph,
      borderColor: generarColor(),
      backgroundColor: 'rgba(0,0,0,0)', // Sin fondo
    });
    mesesMostrados.add(monthId);
  }

  // Actualiza etiquetas si es necesario
  const maxLength = Math.max(...miGrafico.data.datasets.map(ds => ds.data.length));
  miGrafico.data.labels = Array.from({ length: maxLength }, (_, i) => i + 1);

  miGrafico.update();
}

function generarColor() {
  const r = Math.floor(Math.random() * 200);
  const g = Math.floor(Math.random() * 200);
  const b = Math.floor(Math.random() * 200);
  return `rgb(${r}, ${g}, ${b})`;
}

  const btnBack = document.getElementById('retroceder');

    if (btnBack) {
            btnBack.addEventListener('click',function() {
            
            window.location.href = '/home';
            });
        }

</script>

